[ui]
style=~/.hgconfig/ci

[extensions]
pager=
color=
fetch=
purge=
rebase=
mq=
progress=
graphlog=
remotebranches=~/.hgconfig/hg_remotebranches.py

[bookmarks]
track.current = True

[pager]
pager = LESS='FRX' less
attend = cat, diff, log, glog, ll, bl, gl, incoming, outgoing, show, heads

[alias]
info   = !$HG branches ; echo ; $HG summary --remote ; echo ; $HG recent
nudge  = push --rev .
nuke   = !$HG up -C . && $HG clean
ll     = log --style ~/.hgconfig/ci
bl     = ll -b .
gl     = ll -G
recent = ll -l 10

[defaults]
revert = --no-backup
